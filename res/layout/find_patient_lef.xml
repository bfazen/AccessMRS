<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentTop="true"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/searchholder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/search_gradient"
        android:orientation="horizontal"
        android:paddingBottom="2dip"
        android:paddingLeft="6dip"
        android:paddingRight="6dip"
        android:paddingTop="8dip" >

<!-- louis.fazen... based on recent changeset, may not need the layout_height=35px here-->
        <EditText
            android:id="@+id/search_text"
            android:layout_width="0dip"
            android:layout_height="50dip"
            android:layout_weight="1.0"
            android:ellipsize="end"
            android:hint="@string/search_hint"
            android:singleLine="true"
            android:textSize="19sp" />
<!-- 
        <ImageButton
            android:id="@+id/barcode_button"
            android:layout_width="wrap_content"
            android:layout_height="45dip"
            android:src="@drawable/ic_btn_barcode" />
             -->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/patientholder"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:orientation="vertical" >

        <ListView
            android:id="@android:id/list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <TextView
            android:id="@android:id/empty"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/white"
            android:gravity="center"
            android:paddingLeft="17sp"
            android:paddingRight="17sp"
            android:text="@string/no_patients"
            android:textColor="@drawable/black"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonholder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

<!-- louis.fazen... based on recent changeset, may not need the minheight = 35px here-->

        <Button
            android:id="@+id/download_patients"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:minHeight="45dip"
            android:padding="12dp"
            android:text="@string/download_patients"
            android:textSize="16dp" />

<!-- 
        <Button
            android:id="@+id/upload_button"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:minHeight="90px"
            android:padding="12dp"
            android:text="@string/upload_patients"
            android:textSize="16dp" />
             -->

<!-- Customized by louis.fazen@gmail.com
	Reset button hieght to 35px from 90px
	changed by Yaw to 45dip
 louis.fazen... based on recent changeset, may not need the minheight =35px here-->
        
        <Button
            android:id="@+id/create_patient"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:minHeight="45dip"
            android:padding="12dp"
            android:text="@string/fill_forms"
            android:textSize="16dp" />
        
        <!-- 
        <Button
            android:id="@+id/get_button"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:minHeight="45dip"
            android:padding="12dp"
            android:text="@string/get_forms"
            android:textSize="16dp" />
              -->
    </LinearLayout>

</LinearLayout>