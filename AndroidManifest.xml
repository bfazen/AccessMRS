<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.odk.clinic.android"
    android:versionCode="1"
    android:versionName="@string/app_version" >

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:name=".utilities.App"
        android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        <activity
            android:label="@string/app_name"
            android:name=".activities.ListPatientActivity" 
            android:screenOrientation="portrait">
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
             <intent-filter>
                <action android:name="org.odk.clinic.android.activities.ListPatientActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".activities.ListFormActivity"
            android:screenOrientation="portrait" />
        <activity
            android:label="@string/app_name"
            android:name=".activities.DownloadFormActivity"
                        android:theme="@android:style/Theme.NoDisplay"
            android:screenOrientation="portrait" />
        <activity
            android:label="@string/app_name"
            android:name=".activities.FormPriorityList"
            android:screenOrientation="portrait" />
        <activity
            android:label="@string/app_name"
            android:name=".activities.DownloadPatientActivity"
                        android:theme="@android:style/Theme.NoDisplay"
            android:screenOrientation="portrait" />
       <!-- Customization by louis.fazen@gmail.com
			Allow for PreferencesActivity to be called by external application intent        
         -->
        <activity 
            android:label="@string/app_name"
            android:name=".activities.PreferencesActivity">
            <intent-filter>
				<action
					android:name="android.intent.action.VIEW" />
			</intent-filter>
		</activity>
        <activity
            android:label="@string/app_name"
            android:name=".activities.ViewPatientActivity" 
            android:screenOrientation="portrait"/>
        <activity
            android:label="@string/app_name"
            android:name=".activities.ObservationChartActivity" 
            android:screenOrientation="portrait"/>
        <activity
            android:label="@string/app_name"
            android:name=".activities.ObservationTimelineActivity"
            android:screenOrientation="portrait" />
        <activity
            android:label="@string/app_name"
            android:name=".activities.InstanceUploaderList"
            android:screenOrientation="portrait" />
        <activity
            android:label="@string/app_name"
                        android:theme="@android:style/Theme.NoDisplay"
            android:name=".activities.InstanceUploaderActivity"
            android:screenOrientation="portrait" />
        
                <!--louis.fazen@gmail.com Change View Menu Settings -->
        <activity
            android:name=".activities.ViewMenuPreference"
            android:theme="@android:style/Theme.NoDisplay"
            android:label="@string/chw_menu_pref" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:name="android.permission.INTERNET" />
     <uses-permission android:name="android.permission.SET_TIME"/> 
	<uses-permission android:name="android.permission.SET_TIME_ZONE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" >
    </uses-permission>
    
