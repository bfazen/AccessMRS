<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.odk.clinic.android"
    android:sharedUserId="com.alphabetbloc.apps.android.integrated"
    android:versionCode="1"
    android:versionName="@string/app_version" >

    <!-- TODO! the shared user id is really a stopgap measure before going through and changing the entire db structure (again!) -->

    <uses-permission
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- For Receivers -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.DEVICE_POWER" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.GET_TASKS" />

    <!--
    For Clock Updates 
    <uses-permission android:name="android.permission.SET_TIME" />
    <uses-permission android:name="android.permission.SET_TIME_ZONE" />
    <uses-permission android:name="android.permission.CHANGE_CONFIGURATION" />
    -->


    <!-- Used for the 2G/3G Toggle -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_SECURE_SETTINGS" />

    <!--
    Others...
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="com.android.launcher.permission.READ_SETTINGS" />
    <uses-permission android:name="com.android.launcher.permission.WRITE_SETTINGS" />
    -->
    <!-- testing with CM... -->
    <uses-permission android:name="com.alphabetbloc.android.permission.TOGGLE_INTERNET" />

    <application
        android:name=".utilities.App"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" >

        <!-- Activities -->
        <activity
            android:name=".activities.ClinicLauncherActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.DashboardActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.ListPatientActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ViewAllForms"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.RefreshDataActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoDisplay" />
        <activity
            android:name=".activities.PreferencesActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ViewPatientActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ObservationChartActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ObservationTimelineActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ViewSavedForms"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.CreatePatientActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.AddCertificatesActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ClientAuthenticationActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ViewCompletedForms"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.DeviceAdminPreference"
            android:label="@string/chw_menu_pref"
            android:theme="@android:style/Theme.NoDisplay" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Receivers -->
        <receiver android:name="com.commonsware.cwac.wakeful.RefreshDataReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED" />
            </intent-filter>

            <meta-data
                android:name="com.commonsware.cwac.wakeful"
                android:resource="@xml/wakeful_refresh_data" />
        </receiver>
        <receiver android:name="com.commonsware.cwac.wakeful.EncryptDataReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
            <!-- Could add other things here, eg. SMS to force encryption... -->
            <meta-data
                android:name="com.commonsware.cwac.wakeful"
                android:resource="@xml/wakeful_encrypt_data" />
        </receiver>
        <receiver android:name="com.commonsware.cwac.wakeful.DeleteDecryptedDataReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
            <!-- Could add other things here, eg. SMS to force encryption... -->
            <meta-data
                android:name="com.commonsware.cwac.wakeful"
                android:resource="@xml/wakeful_delete_decrypted_data" />
        </receiver>
        <receiver android:name="com.commonsware.cwac.wakeful.WipeDataReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
             <intent-filter>
                <action android:name="org.odk.clinic.android.WIPE_DATA_SERVICE" />
            </intent-filter>
            <!-- Could add other things here, eg. SMS to force encryption... -->
            <meta-data
                android:name="com.commonsware.cwac.wakeful"
                android:resource="@xml/wakeful_wipe_data" />
        </receiver>

        <!-- Services -->
        <service
            android:name="com.alphabetbloc.clinic.services.RefreshDataService"
            android:label="RefreshDataService" >
            <intent-filter>
                <action android:name="com.alphabetbloc.clinic.services.RefreshDataService" />
            </intent-filter>
        </service>
        <service android:name="com.alphabetbloc.clinic.services.EncryptionService" >
        </service>
        <service android:name="com.alphabetbloc.clinic.services.DeleteDecryptedFilesService" >
        </service>
        <service android:name="com.alphabetbloc.clinic.services.WipeDataService" >
        </service>
    </application>

    <uses-sdk android:minSdkVersion="4" >
    </uses-sdk>

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true" />

</manifest>